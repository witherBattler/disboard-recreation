tatarça, تاتارچا‎,Twi,Reo Tahiti,Uyƣurqə, ئۇيغۇرچە‎,українська,اردو,zbek, Ўзбек, أۇزبېك‎,Tshivenḓa,Tiếng Việt,Volapük,Walon,Cymraeg,Wollof,Frysk,isiXhosa,ייִדיש,Yorùbá,Saɯ cueŋƅ, Saw cuengh"></better-dropdown>    
                </div>
                <div>
                    <p class="subtitle">Category</p>
                    <better-dropdown selected="<%- serverData.category %>" id="category-dropdown" width="390px" options="Community,Gaming,Anime - Manga,Music,Technology,Language,Movies,Media,Programming,Other"></better-dropdown>
                </div>
            </div>
    
    
    
            
            <div class="row">
                <p class="subtitle">Tags</p>
                <button id="add-tag">
                    <img src="/icons/add.svg">
                </button>
            </div>
    
            
            <div id="tags">
                <% serverData.tags.forEach(tag => { %>
                    <hashtag-renderer name="<%- tag %>"></hashtag-renderer>
                <% }) %>
            </div>
            
    
            <p class="subtitle">Short description</p>
            <textarea id="short-description" placeholder="What is your server about?"><%- serverData.shortDescription %></textarea>
    
            <p class="subtitle">Description</p>
            <textarea id="description" placeholder="More details about your server"><%- serverData.description %></textarea>
    
            <div id="nsfw">
                <better-checkbox listen-for-clicks="nsfw" id="nsfw-checkbox" checked="<%- serverData.nsfw %>"></better-checkbox>
                <p>NSFW</p>
            </div>
            <p class="details">Must be checked if the server's main theme is NSFW, such as violent content.</p>
    
            <div id="unlisted">
                <better-checkbox listen-for-clicks="unlisted" id="unlisted-checkbox" checked="<%- serverData.unlisted %>"></better-checkbox>
                <p>Unlisted</p>
            </div>
            <p class="details">If checked, will be hidden from the public server list, and will only be available to people who have the link.</p>
            <div id="submit-button-container">
                <button id="submit-button">
                    <span>Submit</span>
                    <img src="/icons/right.svg">
                </button>
            </div>
        </div>
        
    </body>
    
    <script src="util/util.js"></script>
    <script src="util/betterCheckbox/betterCheckbox.js"></script>
    <script src="util/betterDropdown/betterDropdown.js"></script>
    <script src="util/hashtagRenderer/hashtagRenderer.js"></script>
    <%- include("partials/tag-editor") %>
    <%- include("partials/toast") %>
    <script>
        tags = <%- JSON.stringify(serverData.tags) %>
        serverData = <%- JSON.stringify(serverData) %>
    </script>
    <script src="scripts/edit-server.js"></script>
    
</html>